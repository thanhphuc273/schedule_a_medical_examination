<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    table,th,td{
        border:1px solid black;
        border-collapse: collapse;
    }
    .btn-edit{
        outline: none;
        border: none;
        background: orange;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
    .btn-delete{
        outline: none;
        border: none;
        background: red;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
</style>
<body>
    <table style="width: 100%;">
        <tr>
          <th>Email</th>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Address</th>
          <th>Action</th> 
        </tr>
        <% for(let i=0; i < datatable.length; i++) { %>
            <tr>
              <td><%= datatable[i].email %></td>
              <td><%= datatable[i].firstName %></td>
              <td><%= datatable[i].lastName %></td>
              <td><%= datatable[i].address %></td>
              <td>
                  <a href="/edit-crud?id=<%=datatable[i].id %>" class="btn-edit" type="button">Edit</a>
                  <a href="/delete-crud?id=<%=datatable[i].id %>" class="btn-delete" type="button">Delete</a>
            
             </td>
            </tr>
         <% } %>
      </table>
</body>
</html>